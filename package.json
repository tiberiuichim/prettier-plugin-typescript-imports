{
  "name": "prettier-plugin-typescript-imports",
  "version": "0.0.1",
  "description": "A CLI tool (and future Prettier plugin) to separate type imports from value imports in TypeScript files.",
  "type": "module",
  "bin": {
    "fix-type-imports": "./dist/cli.js"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "build": "tsc",
    "fix-type-imports": "tsx src/cli.ts"
  },
  "dependencies": {
    "ts-morph": "^21.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
