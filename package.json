{
  "name": "prettier-plugin-typescript-imports",
  "version": "0.0.1",
  "description": "A Prettier plugin (and CLI tool) to automatically format TypeScript imports by separating type imports from value imports.",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "bin": {
    "fix-type-imports": "./dist/cli.js"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "fix-type-imports": "tsx src/cli.ts"
  },
  "dependencies": {
    "ts-morph": "^21.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
